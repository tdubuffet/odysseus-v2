{% extends "::baseLogin.html.twig" %}

{% block content %}
    {% if error %}
        <div>{{ error|trans }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="body bg-gray">
            <div class="form-group">
                <input type="text" id="username" class="form-control"  name="_username" value="{{ last_username }}" required="required" placeholder="Identifiant"/>
            </div>

            <div class="form-group">
                <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="Mot de passe"/>
            </div>

            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Se souvenir de moi
            </div>
        </div>
        <div class="footer">
            <input type="submit" class="btn bg-olive btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </form>
{% endblock content %}
